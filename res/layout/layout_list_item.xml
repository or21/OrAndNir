<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@null"
        android:gravity="center_vertical" />

    <RelativeLayout
        android:id="@+id/layout_item_in_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp" >

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_dealName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2a8f8f"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_description"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:fontFamily="sans-serif-thin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#959595"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txt_storeid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:fontFamily="sans-serif-thin"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#959595"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_claimedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_category"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_claimedBy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#c60000"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>