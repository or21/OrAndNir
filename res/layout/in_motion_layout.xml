<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="75dp"
        android:layout_marginTop="75dp"
        android:contentDescription="@null"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/layout_item_in_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp" >

        <TextView
            android:id="@+id/what"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:text="@+string/what"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a9aaab"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seperator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#a9aaab" />

        <TextView
            android:id="@+id/txt_dealName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2a8f8f"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:text="@+string/where"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a9aaab"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seperator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#a9aaab" />

        <LinearLayout
            android:id="@+id/layout_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:layout_weight="0.30"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2a8f8f"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_storeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:paddingEnd="1dp"
                android:paddingLeft="8dp"
                android:paddingRight="1dp"
                android:paddingStart="8dp"
                android:layout_weight="0.22"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2a8f8f"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/With"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-thin"
            android:text="@+string/with"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#a9aaab"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/seperator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#a9aaab" />

        <TextView
            android:id="@+id/txt_claimedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2a8f8f"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    
        <include
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        layout="@layout/clock" />

    

</LinearLayout>